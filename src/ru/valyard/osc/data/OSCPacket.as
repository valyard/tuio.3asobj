		public function toString():String {
			var result:String = "[";
			var l:uint = this.length;
			if ( l > 0 ) {
				result += this[0].toString();
				for ( var i:uint = 1; i < l; i++ ) {
					result += ", " + this[i].toString();
				}
			}
			return result;
		}
		
