package ru.valyard.osc.data
{
	/**
	 * Class for a single OSC message.
	 * @author					valyard
	 */
	public dynamic class OSCMessage extends OSCPacket {
		
		public function OSCMessage() {
			super();
		}
		
		//--------------------------------------------------------------------------
		//
		// Private variables
		//
		//--------------------------------------------------------------------------
		
		//--------------------------------------------------------------------------
		//
		// Public properties
		//
		//--------------------------------------------------------------------------
		
		public var address:String;
		
		//--------------------------------------------------------------------------
		//
		// Public methods
		//
		//--------------------------------------------------------------------------
		
		//--------------------------------------------------------------------------
		//
		// Overriden methods
		//
		//--------------------------------------------------------------------------
		
		public override function toString():String {
			return "[OSCMessage(" + this.address + ") " + super.toString() + "]"; 
		}
		
		//--------------------------------------------------------------------------
		//
		// Private functions
		//
		//--------------------------------------------------------------------------
		
		//--------------------------------------------------------------------------
		//
		// Event handlers
		//
		//--------------------------------------------------------------------------
		
	}
}